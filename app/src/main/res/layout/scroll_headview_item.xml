<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:minHeight="225dp" >

    <ImageView
        android:id="@+id/scroll_headview_item_icon"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/home_img_default_nor" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/home_img_top_bg"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/scroll_headview_item_title"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="#33000000"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/scroll_headview_item_icon"
        android:paddingLeft="5dp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="展馆导航"
        android:textColor="#ffffff"
        android:textSize="22sp" />

</RelativeLayout>